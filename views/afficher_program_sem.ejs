<html>
  <head>
    <% include ../partials/head %>
    <style>
      .color_0 {
      background-color: red;
      }
      .color_1 {
      background-color: orange;
      }
      .color_2 {
      background-color: yellow;
      }
      .color_3{
      background-color: green;
      }
    </style>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>

    <p>Voici les <% progs.length %> programmes:
    </p>
      <% for(i in progs) { %>

      <a href="edit_prog_sem?name=<%= progs[i]._name %>">Editer</a>
      <a href="supprime_prog_sem?name=<%= progs[i]._name %>">Supprimer</a>
      <% if(progs[i]._status != "OK") { %>
	  configuration problem :
	  <% }  %>

	  <%= progs[i]._filename %> -
	  <%= progs[i]._name %>  -
	  PROGRAM=

	<table  cellspacing=0>
	  <tr>
	    <th>lundi</th>
	    <th>mardi</th>
	    <th>mercredi</th>
	    <th>jeudi</th>
	    <th>vendredi</th>
	    <th>samedi</th>
	    <th>dimanche</th>
	  </tr>
	  <tr>
	    <% for(j=0; j<7; j++) { %>
	       <td class="color_<%= progs[i]._program[j] %>">
		 <a href="edit_prog?name=<%= progs[i]._program[j] %>"><%= progs[i]._program[j] %></a>&nbsp;
	       </td>
	    <% } %>
	  </tr>
	  </table>

	  </tr>
	  </table>
	<% } %>

	<h1> Ajouter un programme</h1>
 <form method="post" action="ajouter_prog_sem">
   Nom du programme: <input type="text" name="prog_name"
    <% if(typeof selected_prog != 'undefined' && selected_prog) { %><
			value="<%= selected_prog._name %>"
			<% } %> /><br/>

    <%
       var liste_jours=["lundi","mardi","mercredi","jeudi","vendredi","samedi", "dimanche"];
       for(j in liste_jours  ) { %>
    <%= liste_jours[j] %>
<select name="<%= liste_jours[j] %>">
  <% for(var i in progs_jour) { %>
  <option value="<%= progs_jour[i]._name %>"
	  <% if(typeof selected_prog != 'undefined' && selected_prog) {
	     if(selected_prog._program[j] === progs_jour[i]._name) {
	     %>
			selected
	  <% }
	     } %>
     ><%= progs_jour[i]._name %></option>
  <%    } %>
</select><br/>
<% } %> 
  <input type="submit" value="Submit">
 </form>

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
