<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>

    <p>Voici les <% zones.length %> zones:
    </p>
    <ul>
      <% for(i in zones){ %>
      <li>
	<a href="edit_zones?name=<%= zones[i]._name %>">Editer</a>
	<a href="supprime_zone?name=<%= zones[i]._name %>">Supprimer</a>
	<% if(zones[i]._status != "OK") { %>
	configuration problem  -
	<% } %>
	<%= zones[i]._filename %> -
	<%= zones[i]._name %> -
	PIN1 = <%= zones[i]._pin1 %> -
	PIN2 = <%= zones[i]._pin2 %> -
	Program = <a href="edit_prog_sem?name=<%= zones[i]._program %>"><%= zones[i]._program %></a>
      </li>
      <% } %>
    </ul>

    <h1> Ajouter une zone</h1>
    <form method="post" action="ajouter_zone">
      Zone Name: <input type="text" name="zone_name"
			<% if(typeof selected_zone != 'undefined' && selected_zone) { %>
			value="<%= selected_zone._name %>"
			<% } %>
			>
      <br>
      PIN1: <input type="text" name="pin1"
			<% if(typeof selected_zone != 'undefined' && selected_zone) { %>
			value="<%= selected_zone._pin1 %>"
			<% } %>
		   ><br>
      PIN2: <input type="text" name="pin2"
		   <% if(typeof selected_zone != 'undefined' && selected_zone) { %>
		   value="<%= selected_zone._pin2 %>"
		   <% } %>
		   ><br>
      Program:

      <select name="program">
	<% for(var i in programs) { %>
	<option value="<%= programs[i]._name %>"
		<% if(typeof selected_zone != 'undefined' && selected_zone) {
		   if(selected_zone._program == programs[i]._name) {
		   %>
		selected
		<% }
		   } %>
		><%= programs[i]._name %></option>
	<%    } %>
      </select><br/>
      <input type="submit" value="Submit">
    </form>

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
